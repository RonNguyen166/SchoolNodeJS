<%- include('./layouts/header') %>

<div class="banner-content">
  <div class="container">
    <div class="banner-infhny">
      <h3>Xem review để lựa chọn Ngôi trường tốt nhất cho bạn</h3>
      <div class="flex-wrap search-wthree-field mt-md-5 mt-4">
        <form action="/school" method="POST" class="booking-form">
          <div class="row book-form">
            <div class="form-input col-md-4 mt-md-0 mt-3">
              <select id="selectList" name="slugTraining">
                <option disabled="disabled" selected="selected">
                  Hệ đào tạo
                </option>
                <option value="cao-dang">Cao đẳng</option>
                <option value="dai-hoc">Đại học</option>
                <option value="trung-cap">Trung cấp</option>
              </select>
            </div>

            <div class="form-input col-md-4 mt-md-0 mt-3">
              <select id="selectList" name="slugAddress">
                <option disabled="disabled" selected="selected">
                  Tỉnh/Thành Phố
                </option>
                <option value="da-nang">Đà Nẵng</option>
                <option value="ho-chi-minh">Hồ Chí minh</option>
                <option value="ha-noi">Hà Nội</option>
              </select>
            </div>
            <div class="bottom-btn col-md-4 mt-md-0 mt-3">
              <button class="btn btn-style btn-secondary">
                <span class="fa fa-search mr-3" aria-hidden="true"></span>
                Search
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="list">
  <div class="container py-md-5">
    <div style="margin: 8px auto; display: block; text-align: center"></div>
    <div class="title-content text-left mb-lg-5 mb-4">
      <h6 class="sub-title">Visit</h6>
      <h3 class="hny-title">Top Trường Đại Học</h3>
    </div>
    <div style="margin: 8px auto; display: block; text-align: center">
      <!---728x90--->
    </div>
    <div class="row bottom-ab-grids">
      <% universities.forEach(function(el){%>
      <div class="col-lg-6 subject-card mt-4" style="height: 100%">
        <div class="subject-card-header p-4">
          <a href="/school/<%= el.slug  %>" class="card_title p-lg-4d-block">
            <div class="row align-items-center">
              <div class="col-sm-5 subject-img">
                <img
                  src="/uploads/<%= el.images %>"
                  alt=""
                  height="200px"
                  width="100%"
                  style="object-fit: cover; border-radius: 10px"
                />
              </div>
              <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                <h4 class="mb-3"><%= el.name %></h4>
                <p
                  class="btn btn-success"
                  style="padding: 9px; line-height: 0.7"
                >
                  <%= el.evaluate %>
                </p>
                <div class="text-review d-inline-flex flex-column">
                  <span class="text-dark p-1">Tốt</span>
                  <span class="text-dark p-1"
                    ><%= el.reviews.length %> Đánh giá</span
                  >
                </div>

                <div class="text-describe"><%= el.description %></div>

                <p class="sub-para mt-2" style="color: rgb(241, 119, 32)">
                  <i class="fas fa-graduation-cap mr-2"></i> <%= el.majors %>
                </p>
              </div>
            </div>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
