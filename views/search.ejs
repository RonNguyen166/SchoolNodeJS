<%- include('./layouts/header') %>

<script>
  var active_school = document.getElementById('active-school');
  var active_home = document.getElementById('active-home');
  
  active_school.classList.add('active');
  active_home.classList.remove('active');
</script>

<div class="block-search list">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-4">
        <h4 class="">School</h4>
        <form action="/school" method="POST">
          <div class="form-group">
            <label for="">Hệ Đào Tạo</label>
            <select class="form-control" name="slugTraining">
              <option disabled="disabled" selected="selected">
                Hệ đào tạo
              </option>
              <option value="cao-dang">Cao đẳng</option>
              <option value="dai-hoc">Đại học</option>
              <option value="trung-cap">Trung cấp</option>
            </select>
          </div>
          <div class="form-group">
            <label for="">Tỉnh/Thành phố</label>
            <select id="selectList" name="slugAddress" class="form-control">
              <option disabled="disabled" selected="selected">
                Tỉnh/Thành Phố
              </option>
              <option value="da-nang">Đà Nẵng</option>
              <option value="ho-chi-minh">Hồ Chí minh</option>
              <option value="ha-noi">Hà Nội</option>
              <option value="thua-thien-hue">Thừa Thiên Huế</option>
            </select>
          </div>
          <div class="form-group">
            <button class="btn btn-style btn-secondary">
              <span class="fa fa-search mr-3" aria-hidden="true"></span> Search
            </button>
          </div>
        </form>
      </div>
      <div class="col-md-12 col-lg-9">
        <% if(message) {%>
        <h6><%= message %></h6>
        <% }else{ %> <% schools.forEach(function(el){ %>
        <div class="subject-card mt-4">
          <div class="subject-card-header p-4">
            <a href="/school/<%= el.slug  %> " class="card_title p-lg-4d-block">
              <div class="row align-items-center">
                <div class="col-sm-4 subject-img">
                  <img
                    src="/uploads/<%= el.images %>"
                    alt=""
                    height="220px"
                    width="100%"
                    style="object-fit: cover; border-radius: 10px"
                  />
                </div>
                <div class="col-sm-8 subject-content mt-sm-0 mt-4">
                  <h4 class="mb-3"><%= el.name %></h4>
                  <p
                    class="btn btn-success"
                    style="padding: 9px; line-height: 0.7"
                  >
                    <%= el.evaluate %>
                  </p>
                  <div class="text-review d-inline-flex flex-column">
                    <span class="text-dark p-1">Tốt</span>
                    <span class="text-dark p-1"
                      ><%= el.reviews.length %> Đánh giá</span
                    >
                  </div>

                  <div class="text-describe"><%= el.description %></div>

                  <p class="sub-para mt-2" style="color: rgb(241, 119, 32)">
                    <i class="fas fa-graduation-cap mr-2"></i> <%= el.majors %>
                  </p>
                </div>
              </div>
            </a>
          </div>
        </div>
        <% }) %> <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('./layouts/footer')%>
