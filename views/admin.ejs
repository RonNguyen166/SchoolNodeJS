            </div>
          </div>
          <div class="sb-sidenav-footer">
            <div class="small">Logged in as:</div>
            Start Bootstrap
          </div>
        </nav>
      </div>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <h1 class="mt-4">Dashboard</h1>
            <ol class="breadcrumb mb-4 d-flex justify-content-between">
              <li class="breadcrumb-item active">Dashboard</li>
              <li>
                <a href="/admin/school/add" class="btn btn-primary"
                  >Create School</a
                >
              </li>
            </ol>
            <% if(message){%>
            <div
              class="
                alert alert-<%=
                message.type
                %>
                alert-dismissible
                fade
                show
              "
              role="alert"
            >
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
              <strong><%= message.message %> </strong>
            </div>
            <%} %>
            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-table me-1"></i>
                DataTable Example
              </div>
              <div class="card-body">
                <table id="datatablesSimple">
                  <thead>
                    <tr>
                      <th>Image</th>
                      <th>Name</th>
                      <th>School code</th>
                      <th>Training</th>
                      <th>Website</th>
                      <th>Address</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Image</th>
                      <th>Name</th>
                      <th>School code</th>
                      <th>Training</th>
                      <th>web</th>
                      <th>address</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% schools.forEach(function(el){ %>
                    <tr>
                      <td class="align-middle">
                        <img
                          src="../uploads/<%= el.images %> "
                          style="
                            height: 50px;
                            border-radius: 4px;
                            width: 60px;
                            object-fit: cover;
                          "
                        />
                      </td>
                      <td class="align-middle"><%= el.name %></td>
                      <td class="align-middle"><%= el.code %></td>
                      <td class="align-middle"><%= el.trainingSystem %></td>
                      <td class="align-middle"><%= el.web %></td>
                      <td class="align-middle"><%= el.address %></td>
                      <td class="align-middle d-flex">
                        <a
                          href="/admin/school/edit/<%= el._id %> "
                          class="text-success mx-2"
                          ><i class="fas fa-edit fa-lg"></i
                        ></a>
                        <!-- <a
                          href="/admin/delete/<%= el._id %> "
                          class="text-danger mx-2"
                        >
                          <i class="fas fa-trash fa-lg"></i>
                        </a> -->
                        <a
                          onclick="deleted('<%= el._id %>')"
                          class="text-danger mx-2"
                        >
                          <i class="fas fa-trash fa-lg"></i>
                        </a>
                      </td>
                    </tr>
                    <%}) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </main>
        <footer class="py-4 bg-light mt-auto">
          <div class="container-fluid px-4">
            <div
              class="d-flex align-items-center justify-content-between small"
            >
              <div class="text-muted">Copyright &copy; Your Website 2021</div>
              <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
