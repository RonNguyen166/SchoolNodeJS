<%- include('./layouts/header') %>
<!-- //header -->
<!-- about breadcrumb -->
<section
  class="w3l-about-breadcrumb text-left"
  style="background: url('../uploads/<%= school.images %> ') no-repeat center"
>
  <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
    <div class="container">
      <h2 class="title"><%= title %></h2>
      <ul class="breadcrumbs-custom-path mt-2">
        <li><a href="#url">Home</a></li>
        <li class="active">
          <span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Single
          Post
        </li>
      </ul>
    </div>
  </div>
</section>
<!-- //about breadcrumb -->
<!--/blog-->
<div class="py-5 w3l-homeblock1 text-center">
  <div class="container mt-md-3">
    <h3 class="blog-desc-big text-center mb-4"><%= school.name%></h3>
    <ul class="b-contact">
      <li>
        <a href="" class="mx-1" style="color: rgb(100, 100, 100)"
          ><i class="fas fa-envelope"></i> <%= school.email %>
        </a>
      </li>
      <li>
        <a href="" class="mx-1" style="color: rgb(100, 100, 100)"
          ><i class="fas fa-external-link-alt"></i><%= school.web %>
        </a>
      </li>
      <li>
        <a href="" class="mx-1" style="color: rgb(100, 100, 100)"
          ><i class="fas fa-map-marker-alt"></i><%= school.address %>
        </a>
      </li>
      <li>
        <a href="" class="mx-1" style="color: rgb(100, 100, 100)"
          ><i class="fas fa-phone-square"></i><%= school.phone %>
        </a>
      </li>
    </ul>
  </div>
</div>
<section class="blog-post-main w3l-homeblock1">
  <!--/blog-post-->
  <div class="blog-content-inf pb-5">
    <div class="container pb-lg-4">
      <div class="single-post-image">
        <div class="post-content">
          <img
            src="../uploads/<%= school.images %> "
            class="radius-image mb-5"
            alt=""
            width="100%"
            style="object-fit: cover"
          />
        </div>
      </div>
      <div class="single-post-content">
        <p class="mb-4"><%- school.content %></p>

        <div class="b-review mt-5">
          <div class="d-flex justify-content-between">
            <div class="text">
              <h3>Các đánh giá</h3>
              <p class="count"><%= reviews.length %> đánh giá</p>
            </div>
            <div class="link-review">
              <button
                type="button"
                class="btn btn-primary"
                data-toggle="modal"
                data-target="#exampleModalCenter"
              >
                Viết đánh giá
              </button>
            </div>
          </div>
          <div class="reviews">
            <% reviews.forEach(function(review) {%>
            <div class="review mb-2">
              <div class="avatar-group d-flex">
                <img src="../images/avatar.jpg" />
                <div class="avatar-group-info">
                  <h5 class="user-name mb-0"><%= review.name %></h5>
                  <div class="user-rate-infor d-flex align-items-center">
                    <div class="rating-group mr-2">
                      <% if(review.rating === 5) {%>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <% }else if(review.rating === 4) {%>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <% }else if(review.rating === 3) {%>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <% }else if(review.rating === 2) {%>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <% }else {%>
                      <i
                        class="fas fa-star"
                        style="font-size: 14px; color: rgb(247, 230, 0)"
                      ></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <i class="far fa-star" style="font-size: 14px"></i>
                      <% } %>
                    </div>
                    <div
                      class="created"
                      style="font-size: 14px; color: #abaeb1"
                    >
                      <span>
                        | <%= review.createdAt.toLocaleDateString() %></span
                      >
                    </div>
                  </div>
                  <div class="review-content mt-2" style="color: #777">
                    <%- review.content %>
                  </div>
                </div>
              </div>
            </div>
            <hr />
            <% }) %>
          </div>
          <div
            class="modal fade"
            id="exampleModalCenter"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true"
          >
            <div
              class="
                modal-dialog
                modal-lg
                modal-dialog-scrollable
                modal-dialog-centered
              "
              role="document"
            >
              <div class="modal-content">
                <form
                  id="formFooter"
                  action="/school/<%= school.slug %>/review"
                  method="POST"
                >
                  <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">
                      Đánh Giá <%= school.name %>
                    </h4>
                    <button
                      type="button"
                      class="close"
                      data-dismiss="modal"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <!-- <span style="font-weight: 600; font-size: 20px"
                      >Đánh giá của bạn*</span
                    > -->

                    <label for="">Đánh giá của bạn*:</label>

                    <div class="stars">
                      <input type="radio" id="five" name="rating" value="5" />
                      <label for="five"></label>
                      <input type="radio" id="four" name="rating" value="4" />
                      <label for="four"></label>
                      <input type="radio" id="three" name="rating" value="3" />
                      <label for="three"></label>
                      <input type="radio" id="two" name="rating" value="2" />
                      <label for="two"></label>
                      <input type="radio" id="one" name="rating" value="1" />
                      <label for="one"></label>
                    </div>
                    <div class="form-group mt-3">
                      <label for="Name">Name:</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        placeholder="Name"
                        name="name"
                      />
                    </div>
                    <div class="form-group">
                      <label for="Email">Email:</label>
                      <input
                        type="text"
                        class="form-control"
                        id="email"
                        placeholder="Email"
                        name="email"
                      />
                    </div>
                    <div class="form-group">
                      <label for="Content">Nhận xét:</label>
                      <textarea
                        class="form-control"
                        id="Content"
                        rows="3"
                        name="content"
                      ></textarea>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnAdd">
                      Submit
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--//blog-post-->
  </div>
</section>
<script
  src="https://cdn.tiny.cloud/1/xu7p6x6mjswarx9cy6xdqgm61549u6mtei7svz6wf4lsu8e8/tinymce/5/tinymce.min.js"
  referrerpolicy="origin"
></script>
<script type="text/javascript">
  tinymce.init({ selector: "textarea" });
  //Modal
  $("#myModal").on("shown.bs.modal", function () {
    $("#myInput").trigger("focus");
  });
</script>
<%- include('./layouts/footer')%>
